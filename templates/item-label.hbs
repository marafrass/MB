<form class="murder-board-item-form">
  <fieldset>
    <legend><i class="fas fa-tag" style="margin-right: 8px;"></i>{{localize 'MURDER_BOARD.Dialogs.AddLabel'}}</legend>
    
    <div class="form-group">
      <label for="label-text">{{localize 'MURDER_BOARD.UI.Text'}}</label>
      <input type="text" id="label-text" name="label" value="{{label}}" placeholder="Enter label text..." autofocus>
    </div>

    <div class="form-group">
      <label for="label-color">{{localize 'MURDER_BOARD.Dialogs.ColorPicker'}}</label>
      <input type="color" id="label-color" name="color" value="{{color}}">
    </div>

    <div class="form-group">
      <label>
        <input type="checkbox" name="acceptsConnections" value="on" {{#if acceptsConnections}}checked{{/if}}>
        Accepts Connections
      </label>
    </div>

    <input type="hidden" name="x" value="{{x}}">
    <input type="hidden" name="y" value="{{y}}">
  </fieldset>

  <menu class="dialog-buttons">
    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i>{{localize 'MURDER_BOARD.UI.Save'}}</button>
    <button type="button" class="btn btn-secondary" data-action="cancel"><i class="fas fa-times"></i>{{localize 'MURDER_BOARD.UI.Cancel'}}</button>
  </menu>
</form>
